@model IEnumerable<AppDbContext.Models.Shipping>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShippingPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShippingState)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShippingPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShippingState.Description)
            </td>
            <td>
                    <a asp-action="Edit" class="edit" asp-route-id="@item.Id"><button type="button" class="btn btn-sm  btn-success"><i class="fas fa-pencil-alt" aria-hidden="true"></i></button></a>
                    <a asp-action="Details" class="details" asp-route-id="@item.Id"><button type="button" class="btn btn-sm  btn-info"><i class="fas fa-eye" aria-hidden="true"></i></button></a>
                    <a asp-action="Delete" class="delete" asp-route-id="@item.Id">
                        <button type="button" class="btn btn-sm btn-danger">
                            <i class="fas fa-trash" aria-hidden="true"></i>
                        </button>
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>
