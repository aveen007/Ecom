@model IEnumerable<Ecom.Models.ValueTypeViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid pt-5">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">Value Types</span></h2>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ValueName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ValueName)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><button type="button" class="btn btn-lg  btn-success"><i class="fas fa-pencil-alt" aria-hidden="true"></i></button></a>
                    <a asp-action="Details" class="details" asp-route-id="@item.Id"><button type="button" class="btn btn-lg  btn-info"><i class="fas fa-eye" aria-hidden="true"></i></button></a>
                    <a asp-action="Delete" class="delete" asp-route-id="@item.Id">
                        <button type="button" class="btn btn-lg btn-danger">
                            <i class="fas fa-trash" aria-hidden="true"></i>
                        </button>
                    </a>
            </td>
        </tr>

}
    </tbody>

</table>
