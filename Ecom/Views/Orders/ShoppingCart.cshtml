@model IEnumerable<Ecom.Models.OrderViewModel>

@{
    ViewData["Title"] = "ShoppingCart";
}

   <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-lg-8 table-responsive mb-5">
                <table class="table table-light table-borderless table-hover text-center mb-0">
                    <thead class="thead-dark">
                        <tr>
                            <th>Products</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th>Remove</th>
                        </tr>
                    </thead>
                    <tbody class="align-middle">
                        @for(int i = 0; i < ViewBag.ProductsOrder.Count; i++)
                             {
                                
                             var product = ViewBag.ProductsOrder[i];
                                 
                             <tr>
                                <td class="align-middle"><img src=@product.Product.ImageLink alt="" style="width: 50px;">@product.Product.Name</td>
                                @{
                                    product.SinglePrice -= 5;
                                }
                                <td class="align-middle">@product.SinglePrice</td>
                                <td class="align-middle">
                                    <div class="input-group quantity mx-auto" style="width: 100px;">
                                        <div class="input-group-btn">
                                            <button class="btn btn-sm btn-primary btn-minus" onclick = "minus(i)">
                                            <i class="fa fa-minus"></i>
                                            </button>
                                        </div>
                                        <input id = "btn"+toString(i) type="text" class="form-control form-control-sm bg-secondary border-0 text-center" value=@product.Quantity>
                                        <div class="input-group-btn">
                                            <button id = "btn_add"+toString(i) class="btn btn-sm btn-primary btn-plus" onclick = "add(")">
                                                <i class="fa fa-plus"></i>
                                            </button>
                                        </div>
                                    </div>
                                </td>
                                @{
                                    var tot = product.SinglePrice * product.Quantity;
                                    if(ViewBag.tot == null)
                                    {
                                        ViewData["tot"] = tot;
                                    }
                                    else
                                    {
                                        ViewBag.tot += tot;
                                    }
                                }
                                <td id = "TotPrice" class="align-middle">@tot</td>
                                <td class="align-middle"><button class="btn btn-sm btn-danger"><i class="fa fa-times"></i></button></td>
                            </tr>
                            <script>
                                function minus(int i){
                                    console.log("Somar");
                                    @{
                                        product.Quantity -= 1;
                                     }
                                    document.getElementById("btn"+toString(i)).value = @product.Quantity;
                                }
                                function add(int i){
                                    console.log("add");
                                    @{
                                        product.Quantity += 1;
                                    }
                                    document.getElementById("btn"+toString(i)).value = @product.Quantity;
                                }
                            </script>
                        }    
                    </tbody>
                </table>
            </div>
            <div class="col-lg-4">
                <form class="mb-30" action="">+
                    <div class="input-group">
                        <input type="text" class="form-control border-0 p-4" placeholder="Coupon Code">
                        <div class="input-group-append">
                            <button class="btn btn-primary">Apply Coupon</button>
                        </div>
                    </div>
                </form>
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Cart Summary</span></h5>
                <div class="bg-light p-30 mb-5">
                    <div class="border-bottom pb-2">
                        <div class="d-flex justify-content-between mb-3">
                            <h6>Subtotal</h6>
                            <h6>@ViewBag.tot</h6>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">Shipping</h6>
                            <h6 class="font-weight-medium">$10</h6>
                        </div>
                    </div>
                    <div class="pt-2">
                        <div class="d-flex justify-content-between mt-2">
                            <h5>Total</h5>
                        @{
                            ViewBag.tot += 10;
                        }
                            <h5>@ViewBag.tot</h5>
                        </div>
                        <button class="btn btn-block btn-primary font-weight-bold my-3 py-3">Proceed To Checkout</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    